
#include <stdio.h>
#define N 5
int main() {
    
    
    for(int i=1;i<=N;i++)
    {
        for(int j=1;j<=i;j++)
        {
              printf("%d ",j);
        }
        for(int k=1;k<=2*(N-i);k++)
        {
            printf("  ");
        }
        for(int j=i;j>0;j--)
        {
            printf("%d ",j);
        }
        
        printf("\n");
    }

    return 0;
}
