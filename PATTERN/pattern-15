
#include <stdio.h>
#define N 3
int main() {
    
    
    for(int i=0;i<N;i++)
    {
       
      for(int j=0;j<N-i-1;j++)
      {
          printf("  ");
      }
     char ch = 'A';
          int breakpoint = (2*i+1)/2;
          for(int j=1;j<=2*i+1;j++){
              
              printf("%c ",ch);
              if(j <= breakpoint) ch++;
              else ch--;
          }
        printf("\n");
    }

    return 0;
}
