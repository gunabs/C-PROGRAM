
#include <stdio.h>

int main() {
   
   
  int row=5;
  int col=5;
  
  int a[row][col];
  
  a[0][0]=1;
  
  for(int i=0;i<row;i++)
  {
      for(int k=0;k<row-i-1;k++)
      {
          printf(" ");
      }
      for(int j=0;j<=i;j++)
      {
          
          if(j==0||i==j)
          {
              a[i][j]=a[0][0];
              printf("%d ",a[0][0]);
          }
          else
          {
              a[i][j]=a[i-1][j-1]+a[i-1][j];
              printf("%d ",a[i][j]);
          }
         
          
      }
       printf("\n");
  }

    return 0;
}
