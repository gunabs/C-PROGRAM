
#include <stdio.h>
int binary(int n,int arr[],int x)
{
     int floor=0,ceil=0;
  int low=0,high=n-1,mid=0;;
  
  while(low<=high)
  {
       mid=(low+high)/2;
      
       if(arr[mid]==x)
       {
         return 0;
       }
       else if(arr[mid]<x)
       {
           low=mid+1;
       }
       else
       {
           high=mid-1;
       }
  }
  return mid;
  
}

int main() {
    
  int n = 6, arr[] ={3, 4, 4, 7, 8, 10,}, x= 8;
  
  int result=binary(n,arr,x);
  
  if(result)
  {
      printf("floor=%d ceil=%d ",arr[result-1],arr[result]);
  }
  else
  {
       printf("floor=%d ceil=%d ",x,x);
  }
    return 0;
}
