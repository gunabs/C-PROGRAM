
#include <stdio.h>
#include <string.h>



void check_palindrome(char* str)
{

    
    int h = 0;
    int flag = 0;
    int l = strlen(str) - 1;

  
   
    while (h < l) {
        if (str[l--] != str[h++]) {
            printf("%s is not a palindrome\n", str);
            flag = 1;
            break;
           
        }
    }

    if (flag == 0)
        printf("%s is a palindrome\n", str);
}

int main()
{
    char str[] = { "madam" };
   

    check_palindrome(str);

   
    return 0;
}
