#include <stdio.h>

int main() {
    char str[] = "Pointer Example";
    char *p = str;
    int count = 0;

    while (*p != '\0') {
        char ch = *p;
        if (ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u'||
            ch=='A'||ch=='E'||ch=='I'||ch=='O'||ch=='U')
            count++;
        p++;
    }

    printf("Number of vowels: %d\n", count);
    return 0;
}

