
#include <stdio.h>


int main() {
    int arr[5] = {10, 25, 5, 40, 15};
    int length=sizeof(arr)/sizeof(arr[0]);
    int *p = arr;
    int max = *p, min = *p;
    
    for(int i=0;i<length;i++)
    {
        if(*(p+i)>max)
        {
            max=*(p+i);
        }
        if(*(p+i)<min)
        {
            min=*(p+i);
        }
    }
    
    printf("array max=%d min=%d ",max,min);
    
    return 0;
}
