
#include <stdio.h>
#include <string.h>
int main() {
 
  char str[3][10] = {"klower", "flow", "flight"};
  
  
  char pre[100];
  strcpy(pre,str[0]);
  
  for(int i=1;i<3;i++)
  {
      int j=0;
      
      while(pre[j]&&str[i][j]&&pre[j]==str[i][j])
      {
          j++;
      }
      
      pre[j]='\0';
      
      if(strlen(pre)==0)
      {
          
          printf("no matching prefix");
          break;
      }
      
      
  }
  
  printf("%s ",pre);
  
    return 0;
}
